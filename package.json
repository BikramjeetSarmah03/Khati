{
  "name": "khati",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "clean:next": "find . -name  '.next' -type d -exec rm -rf {} +",
    "dev:all": "turbo run dev",
    "dev:dashboard": "turbo run dev --filter=@khati/dashboard --filter=@khati/api",
    "dev:www": "turbo run dev --filter=@khati/www",
    "db:push": "turbo run --filter=@khati/db db:push",
    "db:generate": "turbo run --filter=@khato/db db:generate",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "prepare": "husky",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "turbo": "^2.1.3",
    "typescript": "^5.6.2"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
